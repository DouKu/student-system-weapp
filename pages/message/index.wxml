<!--pages/message/index.wxml-->
<view>
  <i-steps current="{{step}}">
    <i-step>
      <view slot="title">
        个人信息
      </view>
    </i-step>
    <i-step>
      <view slot="title">
        监护人信息
      </view>
    </i-step>
    <i-step>
      <view slot="title">
        选择科目
      </view>
    </i-step>
  </i-steps>
  <view wx:if="{{step === 0}}">
    <i-input title="姓名:" value="{{ value1 }}" autofocus placeholder="必填" />
    <i-panel title="性别:">
      <i-radio-group bindchange="handleSexChange" current="{{sex}}">
        <i-radio value="男"></i-radio>
        <i-radio value="女"></i-radio>
      </i-radio-group>
      <i-input value="{{ value2 }}" type="number" title="电话号码:" placeholder="必填" />
      <i-input value="{{ value3 }}" type="textarea" title="家庭住址:" placeholder="必填" maxlength="50" />
      <i-input value="{{ value3 }}" type="textarea" title="户口所在地:" placeholder="必填" maxlength="50" />
    </i-panel>
    <i-panel title="是否内宿:">
      <i-radio-group bindchange="handleIsDormChange" current="{{isDorm}}">
        <i-radio value="否"></i-radio>
        <i-radio value="是"></i-radio>
      </i-radio-group>
    </i-panel>
    <i-button type="primary" bind:click="toSecond" size="small">下一步</i-button>
  </view>
  <view wx:elif="{{step === 1}}">
    <i-input title="监护人姓名:" value="{{ value1 }}" autofocus placeholder="必填" />
    <i-input title="监护人电话号码:" value="{{ value1 }}" autofocus placeholder="必填" />
    <i-input title="监护人身份证号:" value="{{ value1 }}" autofocus placeholder="必填" />
    <view class="step-button">
      <view class="button-wrap">
        <i-button type="default" bind:click="toFirst" size="small">上一步</i-button>
      </view>
      <view class="button-wrap">
        <i-button type="primary" bind:click="toThird" size="small">下一步</i-button>
      </view>
    </view>
  </view>
  <view wx:else>
    <i-panel title="科目二选一:">
      <i-radio-group bindchange="handleFirstSubjectChange" current="{{first_subject}}">
        <i-radio value="物理"></i-radio>
        <i-radio value="历史"></i-radio>
      </i-radio-group>
    </i-panel>
    <i-panel title="科目四选二:">
      <i-checkbox-group bindchange="handleSecondSubjectChange" current="{{second_subject}}">
        <i-checkbox value="化学"></i-checkbox>
        <i-checkbox value="生物"></i-checkbox>
        <i-checkbox value="地理"></i-checkbox>
        <i-checkbox value="政治"></i-checkbox>
      </i-checkbox-group>
    </i-panel>
    <view class="step-button">
      <view class="button-wrap">
        <i-button type="default" bind:click="toSecond" size="small">上一步</i-button>
      </view>
      <view class="button-wrap">
        <i-button type="primary" size="small">提交</i-button>
      </view>
    </view>
  </view>
</view>