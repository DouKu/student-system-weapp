<!--pages/message/index.wxml-->
<view>
  <i-steps current="{{step}}">
    <i-step>
      <view slot="title">
        个人信息
      </view>
    </i-step>
    <i-step>
      <view slot="title">
        监护人信息
      </view>
    </i-step>
    <i-step>
      <view slot="title">
        选择科目
      </view>
    </i-step>
  </i-steps>
  <i-input title="姓名:" value="{{ value1 }}" autofocus placeholder="必填" />
  <i-panel title="性别:">
    <i-radio-group bindchange="handleSexChange" current="{{sex}}">
      <i-radio value="男"></i-radio>
      <i-radio value="女"></i-radio>
    </i-radio-group>
    <i-input value="{{ value2 }}" type="number" title="电话号码:" placeholder="必填" />
    <i-input value="{{ value3 }}" type="textarea" title="家庭住址:" placeholder="必填" maxlength="50" />
    <i-input value="{{ value3 }}" type="textarea" title="户口所在地:" placeholder="必填" maxlength="50" />
  </i-panel>
  <i-panel title="是否内宿:">
    <i-radio-group bindchange="handleIsDormChange" current="{{isDorm}}">
      <i-radio value="否"></i-radio>
      <i-radio value="是"></i-radio>
    </i-radio-group>
  </i-panel>
</view>